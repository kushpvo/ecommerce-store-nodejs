<nav class="mt-5">
  <ul class="pagination justify-content-center">
    <li class="page-item <% if (!hasPreviousPage) { %>disabled<% } %>">
      <a
        class="page-link"
        aria-label="Previous"
        href="?page=<%= previousPage %>"
      >
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <% if (currentPage != 1) { %>
    <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
    <% } %> <% if (hasPreviousPage && previousPage != 1){ %>
    <li class="page-item">
      <a class="page-link" href="?page=<%= previousPage %>"
        ><%= previousPage %></a
      >
    </li>
    <% } %>
    <li class="active page-item">
      <a class="page-link" href="?page=<%= currentPage %>"
        ><%= currentPage %></a
      >
    </li>
    <% if (hasNextPage){ %>
    <li class="page-item">
      <a class="page-link" href="?page=<%= nextPage %>"><%= nextPage %></a>
    </li>
    <% } %> <% if (lastPage != currentPage && nextPage != lastPage) { %>
    <li class="page-item">
      <a class="page-link" href="?page=<%= lastPage %>"><%= lastPage %></a>
    </li>
    <% } %>
    <li class="page-item <% if (!hasNextPage) { %>disabled<% } %>">
      <a class="page-link" aria-label="Next" href="?page=<%= nextPage %>">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>
