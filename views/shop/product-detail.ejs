<%- include("../includes/head.ejs") %>
  </head>

  <body>
    <%- include("../includes/navigation.ejs") %>

    <main>
      <div class="container p-4 h-100">
        <div class="jumbotron centered pt-3 pb-3">
          <h1 class="display-4"><%= product.title %></h1>
          <hr class="my-4">
          <img src="/<%= product.imageUrl %>" class="border rounded-lg productImage img-fluid">
          <h2 class="pt-3">$<%= product.price %></h2>
          <p class="lead"><%= product.description %></p>
          <p class="lead">Sold By: <%= userData.name %></p>
          <% if (isAuthenticated) { %>
              <%- include("../includes/add-to-cart.ejs", {product: product}) %>
          <% } %>
        </div>
      </div>
    </main>
<%- include("../includes/end.ejs") %>
